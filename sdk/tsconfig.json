{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@schillinger-sdk/core": ["core"],
      "@schillinger-sdk/core/*": ["core/*"],
      "@schillinger-sdk/shared": ["packages/shared/src"],
      "@schillinger-sdk/shared/*": ["packages/shared/src/*"],
      "@schillinger-sdk/analysis": ["packages/analysis/src"],
      "@schillinger-sdk/analysis/*": ["packages/analysis/src/*"]
    }
  },
  "exclude": [
    "**/__tests__/**",
    "**/tests/**",
    "**/examples/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/dist/**",
    "**/node_modules/**",
    "vitest.enhanced.config.ts"
  ]
}
