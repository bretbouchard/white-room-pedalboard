{
  "name": "@schillinger-sdk/shared",
  "version": "2.0.0",
  "description": "Schillinger System Shared - Common types, utilities, and error handling",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/sinon": "^17.0.3",
    "benchmark": "^2.1.4",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "eslint": "^8.54.0",
    "fast-check": "^3.23.2",
    "progress": "^2.0.3",
    "sinon": "^21.0.1",
    "stats-lite": "^2.2.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./math/*": {
      "import": "./dist/math/*.js",
      "require": "./dist/math/*.js",
      "types": "./dist/math/*.d.ts"
    },
    "./types/*": {
      "import": "./dist/types/*.js",
      "require": "./dist/types/*.js",
      "types": "./dist/types/*.d.ts"
    },
    "./errors/*": {
      "import": "./dist/errors/*.js",
      "require": "./dist/errors/*.js",
      "types": "./dist/errors/*.d.ts"
    },
    "./errors": {
      "import": "./dist/errors/index.js",
      "require": "./dist/errors/index.js",
      "types": "./dist/errors/index.d.ts"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
