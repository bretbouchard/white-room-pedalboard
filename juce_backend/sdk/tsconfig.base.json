{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "paths": {
      "@schillinger-sdk/shared": ["packages/shared/dist"],
      "@schillinger-sdk/shared/*": ["packages/shared/dist/*"],
      "@schillinger-sdk/core": ["packages/core/dist"],
      "@schillinger-sdk/core/*": ["packages/core/dist/*"],
      "@schillinger-sdk/analysis": ["packages/analysis/dist"],
      "@schillinger-sdk/analysis/*": ["packages/analysis/dist/*"]
    }
  }
}
